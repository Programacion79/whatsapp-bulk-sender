# Configuración de Producción
NODE_ENV=production
PORT=3000

# Configuración de WhatsApp
WHATSAPP_SESSION_NAME=production-session
MAX_CONTACTS_PER_BATCH=50
MESSAGE_DELAY_MIN=8000
MESSAGE_DELAY_MAX=15000

# Configuración de Seguridad
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=15

# Configuración de Archivos
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=text/csv,application/vnd.ms-excel,application/vnd.openxmlformats-officedocument.spreadsheetml.sheet

# URLs permitidas (separadas por comas)
ALLOWED_ORIGINS=https://tu-dominio.herokuapp.com,https://tu-dominio-personalizado.com